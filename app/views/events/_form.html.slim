= default_form_for event, html: { class: "grid grid-cols-12" } do |form|
  = form.input :name, col_span: :full, autofocus: true
  = form.input :date_from, as: :date, col_span: 3
  = form.input :date_to, as: :date, col_span: 3
  = form.input :people_count, col_span: 3, disabled: event.persisted?
  = form.buttons_section
    - path = event.persisted? ? event_path(event) : events_path
    = button_link_to "", path, type: :secondary do
      = svg("left-caret", class: "h-4 w-4 mr-2")
      | zpÄ›t
    = form.submit
