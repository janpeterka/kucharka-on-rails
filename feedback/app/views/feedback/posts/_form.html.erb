<%= form_for Feedback::Post.new, html: { class: "feedback--form" } do |f| %>
  <div class="field">
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.file_field :attachments, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit class: "feedback--button" %>
  </div>

<% end %>
